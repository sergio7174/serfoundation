<div class="container">
	<h1>Replace Image</h1>
	
	<div class="alert alert-warning" role="alert">
  	Note: This action cannot be reversed.
	</div>
<form action="/opportunities/<%= opportunity._id %>/image?_method=PUT" method="POST" enctype="multipart/form-data">
<div class="form-group">
				<label for="exampleFormControlFile1">Upload Poster/Image <span class="asterisk">*</span></label>
				<input type="file" class="form-control-file" id="exampleFormControlFile1" name="image" accept="image/*" required>
				<small class="form-text text-muted">Only .jpg/.jpeg/.png formats allowed. Max. size 0.5MB</small>
			</div>
	<div class="text-center">
		<button type="submit" class="btn btn-lg px-5">Submit</button>
	</div>
</form>
</div>

